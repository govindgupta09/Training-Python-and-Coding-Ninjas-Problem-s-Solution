'''
  *
 ***
*****
 ***
  *
'''

n=int(input())
for i in range(1,n//2+2):
    for space in range(i,n//2+1):
        print(" ",end="")
    for j in range(1,2*i):
        print("*",end="")
    print()
for i1 in range(n//2,0,-1):
    for space1 in range(n//2-i1+1):
        print(" ",end="")
    for j1 in range(1,2*i1):
        print("*",end="")
    print()
