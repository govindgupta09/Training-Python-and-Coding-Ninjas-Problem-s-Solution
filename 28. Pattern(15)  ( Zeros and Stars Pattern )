'''
*000*000*
0*00*00*0
00*0*0*00
000***000
'''

n=int(input()) 
i=1 
while i<=n:  #this loop is used to print lines  
    j=1  
    while j<=n:      #this loop is used to print lines  
        if i==j:  
            print("*", end='')  
        else :  
            print("0", end='')  
        j=j+1  
    j=j-1;  
    print("*", end='')  
    while j>=1:  #this loop is used to print lines  
        if i==j:  
            print("*", end='')  
        else :  
            print("0", end='')  
        j=j-1  
    print("");  
    i=i+1  
