# Use of split fxn..
st = 'Print only the words that start with s in this sentence'
for word in st.split():
    if word[0]=='s':
        print(word)

print('\n')
# Use of range() fxn..

for i in range (0,10):
    if i%2==0:
        print(i)


print('\n')
# Use of list comprehenstion..
for i in range (1,50):
    if i%3 == 0:
        print(i)

print('\n')
# Go through the sentence below and if the length of a word is even print even..
str = 'Print every word in this sentence that has even number of letters'
for word in str.split():
    if len(word) % 2 ==0:
        print(word)
