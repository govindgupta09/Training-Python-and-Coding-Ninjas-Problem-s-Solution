tpl = (1,2,3,4,5,6,7,8)
for i in tpl:
    print(i)

print('\n')

list1 = [(1,2),(3,4),(5,8),(3,9)]
for i in list1:
    print(i)

print('\n')

for (a,b) in list1:
    print(a)
    

print('\n')

