'''
1        1
12      21
123    321
1234  4321
1234554321
'''

n=int(input())
i=1
while(i<=n):
    j=1
    while(j<=i):
        print(j,end="")
        j+=1
    gap=1
    while(gap<=2*n-(2*i)):
        print(" ",end="")
        gap+=1
    j1=i
    while(j1>=1):
        print(j1,end="")
        j1-=1
    print()
    i+=1
